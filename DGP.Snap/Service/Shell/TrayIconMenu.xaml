<UserControl x:Class="DGP.Snap.Service.Shell.TrayIconMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DGP.Snap.Service.Shell"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <MenuItem Header="Exit" Style="{DynamicResource StandardMenuItemStyle}" Background="Black" Foreground="White">
            <MenuItem.Icon>
                <TextBlock Style="{StaticResource MenuIconTextStyle}" Text="&#xEA86;"/>
            </MenuItem.Icon>
        </MenuItem>
        <Separator Height="0"/>
        <MenuItem Header="Exit" Style="{DynamicResource StandardMenuItemStyle}" Background="Black" Foreground="White">
            <MenuItem.Icon>
                <TextBlock Style="{StaticResource MenuIconTextStyle}" Text="&#xEA86;"/>
            </MenuItem.Icon>
        </MenuItem>
    </StackPanel>
</UserControl>
