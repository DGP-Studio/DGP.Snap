<UserControl x:Class="DGP.Snap.Window.Wallpaper.ImageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DGP.Snap.Window.Wallpaper"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="200" Width="360">
    <Grid Margin="10">
        <Grid.Effect>
            <DropShadowEffect ShadowDepth="0" BlurRadius="10"/>


        </Grid.Effect>
        <Image x:Name="Image" Stretch="UniformToFill" RenderOptions.BitmapScalingMode="HighQuality"/>
        <TextBlock x:Name="DescriptionText" VerticalAlignment="Bottom" Style="{StaticResource BodyTextBlockStyle}"/>
    </Grid>
    
</UserControl>
