<Window x:Class="DGP.Snap.Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:DGP.Snap.Updater"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True" 
        Background="Black"
        ShowInTaskbar="False"
        ShowActivated="True"
        Topmost="True"
        Title="MainWindow" Height="200" Width="480"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Loaded="Window_Loaded">
    <Grid MouseDown="Grid_MouseDown">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,36,0,0">
            <TextBlock Text="正在从包中提取 Snap Desktop 的文件"  Style="{StaticResource TitleTextBlockStyle}"/>
            <TextBlock Text="一会就好" Style="{StaticResource BodyTextBlockStyle}" HorizontalAlignment="Center" Margin="0,8,0,0"/>
            <mah:ProgressRing Foreground="White" Margin="0,24,0,0" Width="36" Height="36" IsLarge="False"/>
        </StackPanel>
    </Grid>
</Window>
